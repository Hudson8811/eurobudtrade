mixin menu-content(...items)
  ul.header-sub_menu_content
    each item in items
      li.header-sub_menu_content-item
        a.header-sub_menu_content-link(href="#")= item

mixin footer-link(title)
  li.footer-row-item
    a.footer-row-link(href="#")= title

mixin footer-heading(title)
  li.footer-row-item
    a.footer-row-heading(href="#")= title

mixin sl-banner(title)
  a.index_banner-item(href="#")
    svg
        use(xlink:href='images/svg/symbol/sprite.svg#build')
    span= title

mixin desc(number, desc)
  .a_company-item
    .a_company-number= number
    .a_company-desc=desc

mixin m_btn
  a.more_btn(href="#")
    span подробнее
    svg
      use(xlink:href='images/svg/symbol/sprite.svg#more_btn')

mixin s_title(black, blue)
  .section_title
    span=black 
      span=blue

mixin stages-item(title, desc, svg)
  .stages-item
    .stages-icon
      svg
        use(xlink:href=`images/svg/symbol/sprite.svg${svg}`)
    .stages-text
      span=title
      p=desc

mixin svg(svg)
  svg
    use(xlink:href=`images/svg/symbol/sprite.svg${svg}`)

mixin ob-item(img, title)
  .objects-item(style=`background-image: url(images/objects/${img});`)
    .objects-text
        span.objects-title= title
        a.objects-btn(href="#")
            span Рассчитать
            +svg('#objects-svg')

mixin fact(icon, title, desc)
  .facts-item
    .facts-icon= icon
    .facts-text
      span= title
      p= desc

mixin arrow_btn(title)
  a.more_btn(href="#")
    span= title
    svg
      use(xlink:href='images/svg/symbol/sprite.svg#more_btn')

mixin radio-input(name, title)
  label.radio-input
    input(type="radio", name=`${name}`)
    b
    i
    span= title

mixin blue_btn(title)
  a.blue_btn(href="#")
    span= title
    +svg('#calc-arrow')

mixin breadcroumbs(...items)
  ul.breadcroumbs
    each item in items
      li
        a(href="#")= item